{
    "name": "build-electron",
    "productName": "Life Dashboard",
    "version": "0.0.0",
    "description": "A dashboard for stuff",
    "main": "./src/electron.js",
    "bin": "cli.js",
    "build": {
        "appId": "your.id",
        "asar": true,
        "mac": {
            "category": "public.app-category.utilities",
            "icon": "public/icons/my_app.icns"
        }
    },
    "scripts": {
        "start": "NODE_ENV=development electron . --debug",
        "test": "mocha",
        "test:lint": "semistandard",
        "test:build:electron": "electron-builder --dir",
        "build": "electron-builder",
        "x-package": "npm-run-all package:*",
        "x-package:mac": "electron-packager . --overwrite --platform=darwin --arch=x64 --out=out --icon=assets/app-icon/mac/app.icns --osx-sign.identity='Developer ID Application: GitHub' --extend-info=assets/mac/info.plist",
        "x-package:win": "electron-packager . --overwrite --platform=win32 --arch=ia32 --out=out --icon=assets/app-icon/win/app.ico",
        "x-package:linux": "electron-packager . --overwrite --platform=linux --arch=x64 --out=out",
        "x-package:sign-exe": "signcode './out/Electron API Demos-win32-ia32/Electron API Demos.exe' --cert ~/electron-api-demos.p12 --prompt --name 'Electron API Demos' --url 'http://electron.atom.io'",
        "x-package:installer": "node ./script/installer.js",
        "x-package:sign-installer": "signcode './out/windows-installer/ElectronAPIDemosSetup.exe' --cert ~/electron-api-demos.p12 --prompt --name 'Electron API Demos' --url 'http://electron.atom.io'",
        "x-package:mas": "./script/mas.sh",
        "x-windows-store": "node ./script/windows-store.js",
        "x-release": "node ./script/release.js",
        "x-dist-darwin": "run-s build pure-dist-darwin",
        "x-pure-electron": "electron .",
        "x-pure-electron-dev": "NODE_ENV=development electron ."
    },
    "repository": "https://github.com/electron/electron-api-demos",
    "keywords": [
        "Electron",
        "API",
        "demo"
    ],
    "author": "GitHub",
    "license": "MIT",
    "devDependencies": {
        "@octokit/rest": "^16.3.2",
        "chai": "^3.4.1",
        "chai-as-promised": "^6.0.0",
        "chokidar": "^3.2.1",
        "devtron": "^1.3.0",
        "electron-builder": "^21.2.0",
        "electron-packager": "^12.1.0",
        "electron-winstaller": "^2.2.0",
        "husky": "^0.14.3",
        "mocha": "^5.2.0",
        "npm-run-all": "^4.1.5",
        "prettier": "^1.18.2",
        "pretty-quick": "^2.0.0",
        "request": "^2.70.0",
        "rimraf": "^2.5.2",
        "semistandard": "^14.2.0",
        "signcode": "^0.5.0",
        "spectron": "^5.0.0"
    },
    "dependencies": {
        "electron": "^6.0.12",
        "electron-log": "^2.2.14",
        "electron-settings": "^3.0.7",
        "electron-shortcut-normalizer": "^1.0.0",
        "glob": "^7.1.0",
        "update-electron-app": "^1.1.1"
    },
    "standard": {
        "env": {
            "mocha": true
        }
    },
    "husky": {
        "hooks": {
            "pre-commit": "pretty-quick --staged"
        }
    }
}